{
  "manifest_version": 3,
  "name": "YTBBdl",
  "version": "1.0.2",
  "description": "Add a download button to YouTube and BiliBili",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["youtube.js"]
    },
    {
      "matches": ["*://www.bilibili.com/*"],
      "js": ["bilibili.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
